@model IEnumerable<WebFilmOnline.Models.Product>

@{
    ViewData["Title"] = "Thư Viện Phim Lẻ";
}

<h1>Thư Viện Phim Lẻ</h1>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card h-100">
                <img src="@product.ThumbnailUrl" class="card-img-top" alt="@product.Title" style="height: 250px; object-fit: cover;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@product.Title</h5>
                    <p class="card-text">
                        <strong>Thể loại:</strong> @(product.Category?.Name ?? "N/A")<br />
                        <strong>Giá:</strong> @product.Price.ToString("N0") VNĐ
                    </p>
                    <div class="mt-auto">
                        <a asp-action="Details" asp-route-id="@product.ProductId" class="btn btn-info btn-sm">Xem Chi Tiết</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
