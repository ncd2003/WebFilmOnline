@{
    ViewData["Title"] = "Trang chủ";
}

<div class="text-center">
    <h1 class="display-4">Chào mừng đến với FilmServiceApp</h1>
    <p>Nền tảng xem phim trực tuyến của bạn.</p>
    @if (User.Identity?.IsAuthenticated == true)
    {
        <p>Bạn đã đăng nhập với tài khoản: <strong>@User.Identity.Name</strong></p>
        <p>Email: <strong>@User.FindFirst(ClaimTypes.Email)?.Value</strong></p>
        <p>Nhà cung cấp SSO: <strong>@User.FindFirst("SSOProvider")?.Value</strong></p>
        <p>ID SSO: <strong>@User.FindFirst("SSOId")?.Value</strong></p>
        <p>
            Vai trò:
            @foreach (var claim in User.FindAll(ClaimTypes.Role))
            {
                <span>@claim.Value </span>
            }
        </p>
    }
    else
    {
        <p>Vui lòng <a asp-controller="Account" asp-action="Login">đăng nhập</a> để bắt đầu.</p>
    }
</div>
