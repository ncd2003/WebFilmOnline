@model WebFilmOnline.Models.StreamingProvider

@{
    ViewData["Title"] = "Thêm Nhà cung cấp Streaming Mới";
}

<h1>Thêm Nhà cung cấp Streaming Mới</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApiKey" class="control-label"></label>
                <input asp-for="ApiKey" class="form-control" />
                <span asp-validation-for="ApiKey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BaseUrl" class="control-label"></label>
                <input asp-for="BaseUrl" class="form-control" />
                <span asp-validation-for="BaseUrl" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Tạo Mới" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Quay Lại Danh Sách</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}